<% content_for :page_title do %>
  <%= t('.title') %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th><%= attr_name Catalog, 'code' %></th>
      <th><%= attr_name Catalog, 'parent_code' %></th>
      <th><%= attr_name Catalog, 'name' %></th>
      <th><%= attr_name Catalog, 'description' %></th>
      <th><%= attr_name Catalog, 'active' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
        <td><%= catalog.code %></td>
        <td><%= catalog.parent_code %></td>
        <td><%= catalog.name %></td>
        <td><%= catalog.description %></td>
        <td><%= catalog.active %></td>
        <td><%= link_to t('action.show'),  catalog %></td>
        <td><%= link_to t('action.edit'), edit_catalog_path(catalog) %></td>
        <td><%= link_to t('action.destroy'), catalog, method: :delete, data: { confirm: t('message.confirm_destroy') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('action.new'), new_catalog_path %>
